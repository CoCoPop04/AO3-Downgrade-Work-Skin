/* makes the words fit within the 400px instead of the normal margins in ao3 */
#workskin .tw {
  max-width: 400px;
  display: table;
  margin: auto;
  text-align: justify;
}

/* class="user" text is grey */
#workskin .user {
  color: #878787;
}

/* class="link" text is blue */
#workskin .link {
  color: #0084B4;
}

/* class="link" text is underlined when hovered over */
#workskin .link:hover {
  text-decoration: underline;
}

/* all links are blue (eg. username, more notes, series) */
#workskin a {
  color: #0084B4;
  text-decoration: none;
}

/* all links are underlined when hovered over */
#workskin a:hover {
  text-decoration: underline;
}

/* class="tag" is blue */
#workskin .tag {
  color: #0084B4;
}

/* class="check" is blue */
#workskin .check {
  color: #0084B4;
}

/* <hr class="twhr"> which is a formatted break */
#workskin hr {
  width: 100%;
  border-width: 3px;
}

/* <hr class="twhr"> which is a formatted break */
#workskin .twhr {
  width: 100%;
  border-width: 1px;
  color: #878787;
}

/* class="blank" text is white, invisible on white background bc sometimes the <p> </p> won't work properly with the rest of the code so instead put <p class="blank"> ??? </p> */
#workskin .blank {
  color: #ffffff;
}

/* class="underline" text is grey */
#workskin .underline {
  color: #7f7f7f;
}

/* class="underline" is underlined when hovered over */
#workskin .underline:hover {
  text-decoration: underline;
}

/* groupchat usenames appear as blue, bold with the words 'baby BrAT - ' */
#workskin .hovertext1:after {
  content: 'baby BrAT - ';
  color: #0084B4;
  font-weight: bold;
}

